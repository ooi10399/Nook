@model IEnumerable<NookMainApp.Models.Rentee>

@{
    ViewData["Title"] = "Index";
}

<h1>Your friends at Nook..</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-2" style="width:300px">
            <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Image)" alt="Card image" style="width:100%">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">@Html.DisplayFor(modelItem => item.NickName)</h4>
                <p class="card-text">@Html.DisplayFor(modelItem => item.About)</p>

                <p class="card-text">
                    @Html.DisplayFor(modelItem => item.Gender) |
                    @Html.DisplayFor(modelItem => item.DOB)
                </p>

                <a asp-action="Index" class="btn btn-info mt-auto">View details</a>
            </div>
        </div>
    }
</div>
