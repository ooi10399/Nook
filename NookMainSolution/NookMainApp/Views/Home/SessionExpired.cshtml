@{
    ViewData["Title"] = "Session Expired";
}
<div>
    <section class="vh-100" style="background-color: #5bc0de;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <h2 class="mb-5">Session Expired</h2>
                            <p class="mb-5">Your session ended due to inactivity. Log in to start a new session.</p>
                           
                            <form class="form-inline ">
                                <button class="btn btn-lg btn-block btn-info text-light my-2 my-sm-0" type="submit" asp-area="" asp-controller="User" asp-action="Login">Login</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>